package br.com.economy.servlet;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import br.com.economy.DAO.CategoriaDao;

@WebServlet(value="/category")
public class GetCategory extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    
    public GetCategory() {
        super();
    }

	
	protected void doGet(HttpServletResponse response , HttpServletRequest request) throws ServletException, IOException {
		CategoriaDao DAO  = new CategoriaDao();
		String json = DAO.getCategories();
		
		PrintWriter out = response.getWriter();
		out.write(json);
	}
}
